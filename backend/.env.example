# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/coleta-lixo-verde
# Para MongoDB Atlas use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/coleta-lixo-verde?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_mude_em_producao
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=seu_refresh_token_secret_aqui
JWT_REFRESH_EXPIRE=30d

# 2FA Configuration
TWO_FACTOR_APP_NAME=Coleta Verde Itacoatiara

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_de_app
EMAIL_FROM=noreply@coletaverde.com.br

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=seu_account_sid_aqui
TWILIO_AUTH_TOKEN=seu_auth_token_aqui
TWILIO_PHONE_NUMBER=+5592999999999

# WhatsApp Configuration
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_BUSINESS_NUMBER=5592999999999

# Map Configuration
DEFAULT_CITY_LAT=-3.1428
DEFAULT_CITY_LNG=-58.4438
DEFAULT_MAP_ZOOM=13

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Jobs
ENABLE_CRON_JOBS=true
NOTIFICATION_CRON_SCHEDULE=0 8 * * *

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# API Keys (opcional para integrações futuras)
GOOGLE_MAPS_API_KEY=sua_chave_google_maps_aqui
OPENWEATHER_API_KEY=sua_chave_openweather_aqui

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=seu_session_secret_aqui

# Admin Default (primeiro acesso)
ADMIN_EMAIL=admin@coletaverde.com.br
ADMIN_PASSWORD=Admin@123456
ADMIN_NAME=Administrador Sistema
